<form action="/user/update/<%= user.id %>" class="form-signin" method="POST">
  <h2>Editing a user</h2>

  <input class="form-control" name="name" type="text" value="<%= user.name %>"/>
  <input class="form-control" name="title" type="text" value="<%= user.title %>"/>
  <input class="form-control" name="email" type="text" value="<%= user.email %>"/>
  <input class="btn btn-lg btn-primary btn-block" type="submit" value="Proceed"/>
  <input name="_csrf" type="hidden" value="<%= _csrf %>"/>
</form>
