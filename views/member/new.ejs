<div class="member add-member">
  <form action="/member/create" method="POST" >
    <!-- id="add-member" -->
    <input type="text" class=" form-control" placeholder="Add a name..." name="name">
    <input type="text" class=" form-control" placeholder="Add a title..." name="title">
    <input type="text" class=" form-control" placeholder="Add a email..." name="email">
    <input type="hidden" class="team-id form-control" name="owner" value="<%= team.id %>">
    <button type="submit" class="btn green">Add a member</button>
  </form>
</div>