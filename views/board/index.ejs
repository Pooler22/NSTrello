<div class="controller">
  <h2>Tablice</h2>
  <table class="table">
    <tr>
      <th>Id</th>
      <th>Nazwa</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% _.each(boards, function (board) { %>
    <tr data-id="<%= board.id%>" data-model="board">
      <td><%= board.id %></td>
      <td><%= board.name %></td>
      <td><a href="/board/show/<%= board.id %>" class="btn btn-primary">Pokaż</a></td>
      <td><a href="/board/edit/<%= board.id %>" class="btn btn-warning">Zmień nazwę</a></td>
      <td><form action="/board/destroy/<%= board.id %>" method="POST">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
          <input type="hidden" name="_csrf" value="<%= _csrf %>">
        </form></td>
    </tr>
    <% }) %>
  </table>
</div>
