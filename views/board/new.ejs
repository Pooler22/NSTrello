<div class="board col-md-3 add-new">
  <a class="add-board">
    <span>Create new board...</span>
  </a>
  <div class="new-board">
    <div class="new-board-title">
      <span>Create Board</span>
      <button class="close" data-dismiss="modal" type="button">Ã—</button>
    </div>
    <form action="/board/create" class="form-create-board" class="navbar-form navbar-left" method="POST">
      <div class="form-group">
        <% if(flash && flash.err) { %>
          <ul class="allert allert-success">
            <% Object.keys(flash.err).forEach(function(error){ %>
              <li>
                <%- JSON.stringify(flash.err[error]) %>
              </li>
            <% }) %>
          </ul>
        <% } %>

        <div class="input-group">
          <div>
            <label>Title</label>
          </div>
          <input class="form-control" name="name" placeholder="Like 'Programowanie aplikacji webowych' for example..." type="text">
          <input class="form-control" name="_csrf" type="hidden" value="<%= _csrf %>">
          <input class="form-control" name="owner" type="hidden" value="<%= session.User.id %>">
          <input class="form-control" name="acces" type="hidden" value="<%= "Public" %>">
          <button class="btn green" type="submit">Create</button>
        </div>
      </div>
    </form>
  </div>
</div>
