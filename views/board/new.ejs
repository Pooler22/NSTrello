<div>
  <form action="/board/create" method="POST" class="form-create-board">
    <h2 class="form-create-board-heading">Formularz tworzenia tablicy</h2>

    <% if(flash && flash.err) { %>
      <ul class="allert allert-success">
    <% Object.keys(flash.err).forEach(function(error){ %>
        <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
        </ul>
    <% } %>

    <div class="control-group">
      <input type="text" class="form-control" placeholder="Nazwa tablicy" name="name">
    </div>
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
    <button type="submit" class="btn btn-default">Wy≈õlij</button>
  </form>
</div>
