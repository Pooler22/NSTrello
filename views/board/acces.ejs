<div class="modal fade" id="editAcces" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal" type="button">&times;</button>
        <h4 class="modal-title">Change Acces Board</h4>
      </div>
      <div class="form-group">
        <div class="modal-body clearfix">

          <form action="/board/update/<%= board.id %>" id="acces-board" method="POST">
            <input name='acces' type='hidden' value='Private'>
            <button class="btn green" data-url="" type="submit">Private</button>
            <input name='team' type='hidden' placeholder=''>
          </form>

          <form action="/board/update/<%= board.id %>" id="acces-board" method="POST">
            <input name='acces' type='hidden' value='Public'>
            <button class="btn green" data-url="" type="submit">Public</button>
            <input name='team' type='hidden' placeholder=''>
          </form>

          <form action="/board/update/<%= board.id %>" id="acces-board" method="POST">
            <input name='acces' type='hidden' value='Team'>
            <button class="btn green" data-url="" type="submit">Team</button>
            <input name='team'  placeholder=<%= board.team %>>
          </form>

          <div class="modal-footer">
            <button class="btn green" data-dismiss="modal">Cancel</button>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
