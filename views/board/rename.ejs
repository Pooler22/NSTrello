<div id="editName" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Rename Board</h4>
      </div>
      <form action="/board/editAjax/<%= board.id %>" method="post" id="rename-board">
        <div class="form-group">
          <div class="input-group" style="width: 100%;">
            <div class="modal-body clearfix">
              <input type="text" style="width: 100%;" class="form-control" id="new-name" placeholder="<%= board.name %>">
              <input type='hidden' name='_csrf' value='<%= _csrf %>'>
            </div>
            <div class="modal-footer">
              <button class="btn green" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn green" data-url="">Rename</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
