                        <h4 class="modal-title" style="color: #000; cursor: pointer;" id="card-details-title"></h4>
                        <div class="from-edit-card-name-content">
                            <form action="#" method="POST" id="change-card-name-form">
                                <textarea class="form-control" id="card-details-title-input"name="email"></textarea>
                                <input type="hidden" id="card-details-id" name="card_id" value="" />
                                <input type="submit" class="btn green" value="Change"/>
                            </form>

                        </div>
                    </div>
                </div>
                <div class="modal-body" id="card-details-content">
                    <div class="card-details-content">
                        <div class="card-details-feed">
                            <div style="text-align: center">
                                <img src="/images/ajax-loader.gif">
                            </div>
                        </div>
                        <div class="card-details-column">
                            <span>Actions</span>
                            <ul>
                                <li>Usu≈Ñ</li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
