  <div class="col-md-12 col-centered" style="padding: 0;">
    <div class="row page-title white">
      <h2 class="board-title board-name" data-toggle="modal" data-target="#editName">
        <%= board.name %>
      </h2>
      <% include destroy.ejs %>
    </div>
