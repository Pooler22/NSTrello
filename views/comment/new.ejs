<form action="/comment/create" method="POST">
  <input class="form-control" name="content" placeholder="Add comment..." type="text">
  <input class="form-control" name="author" type="hidden" value="<%= session.User.id %>">
  <input class="form-control" name="owner" type="hidden" value="<%= card.id %>">
  <input name="_csrf" type="hidden" value="<%= _csrf %>">
  <button class="btn green" type="submit">Add comment</button>
</form>
